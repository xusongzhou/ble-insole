<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:background="@drawable/dialog_content_bg"
			  android:orientation="vertical"
			  android:layout_width="300dp"
			  android:layout_height="196.3dp"
			  android:minHeight="196.3dp">

	<TextView
		android:gravity="center"
		android:textSize="18sp"
		android:background="@drawable/dialog_title_bg"
		android:textColor="@color/white"
		android:text="@string/warning"
		android:layout_width="300dp"
		android:layout_height="37dp"/>

	<TextView
		android:id="@+id/tv_content"
		android:text="@string/switch_run_plan_warning"
		android:textSize="16sp"
		android:textColor="#000"
		android:layout_marginTop="20dp"
		android:layout_marginStart="10dp"
		android:layout_marginEnd="10dp"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"/>

	<LinearLayout
		android:paddingBottom="28dp"
		android:gravity="center_horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<Button
			android:id="@+id/btn_ok"
			android:background="@drawable/ok_gray"
			android:layout_width="70dp"
			android:layout_height="29dp"/>

		<Button
			android:id="@+id/btn_cancel"
			android:layout_marginStart="60dp"
			android:background="@drawable/cancel_red"
			android:layout_width="70dp"
			android:layout_height="29dp"/>
	</LinearLayout>
</LinearLayout>