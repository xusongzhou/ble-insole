<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="200dp"
    android:minHeight="?android:attr/listPreferredItemHeight"
    >
    <TextView
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2016年3月23日"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/white"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:background="@drawable/linear_bg"
        android:padding="5dp">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:orientation="vertical"
                android:gravity="center_horizontal|center_vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/activity_icon_2"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="步行"
                    android:gravity="center"/>
            </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:orientation="vertical">
              <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  >
                  <TextView
                      android:id="@+id/num"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="1600步"
                      android:layout_centerHorizontal="true"
                      android:layout_centerVertical="true"
                      android:textSize="22sp"
                      />
                  <ImageButton
                      android:id="@+id/positionImage"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignParentRight="true"
                      android:background="@null"
                      android:src="@drawable/activity_position_2"/>

              </RelativeLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:background="@color/tab_view_normal_text"/>
               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_weight="1">
                    <TextView
                        android:id="@+id/countKill"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#50E3C2"
                        android:gravity="center"
                        android:layout_alignParentRight="true"/>
                   <TextView
                       android:id="@+id/countTime"
                       android:layout_width="80dp"
                       android:layout_height="wrap_content"
                       android:text="0"
                       android:textColor="#50E3C2"
                       android:gravity="center"
                       android:layout_alignParentLeft="true"/>
                   <TextView
                       android:id="@+id/countPoistion"
                       android:layout_width="80dp"
                       android:gravity="center"
                       android:layout_height="wrap_content"
                       android:text="0"
                       android:textColor="#50E3C2"
                       android:layout_centerHorizontal="true"/>
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="总用时"
                        android:gravity="center"
                        android:layout_below="@+id/countTime"/>


                   <TextView
                       android:layout_width="80dp"
                       android:layout_height="wrap_content"
                       android:text="总距离"
                       android:id="@+id/textView"
                       android:gravity="center"
                       android:layout_below="@+id/countPoistion"
                       android:layout_centerHorizontal="true" />

                   <TextView
                       android:layout_width="80dp"
                       android:layout_height="wrap_content"
                       android:text="总消耗"
                       android:id="@+id/textView2"
                       android:gravity="center"
                       android:layout_alignTop="@+id/textView"
                       android:layout_alignParentEnd="true" />

               </RelativeLayout>
           </LinearLayout>

       </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/tab_view_normal_text"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:orientation="vertical"
                android:gravity="center_horizontal|center_vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/activity_icon_p_2"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="跑步"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:id="@+id/num1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0公里"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:paddingLeft="30dp"
                        android:textSize="22sp"
                        />
                    <TextView
                        android:id="@+id/num2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0步"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:paddingRight="30dp"
                        android:textSize="22sp"
                        />


                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/tab_view_normal_text"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/countKill1"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:gravity="center"
                        android:textColor="#EFA224"
                        android:layout_alignParentRight="true"/>
                    <TextView
                        android:id="@+id/countTime1"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:gravity="center"
                        android:textColor="#EFA224"
                        android:layout_alignParentLeft="true"/>
                    <TextView
                        android:id="@+id/countPoistion1"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:gravity="center"
                        android:textColor="#EFA224"
                        android:layout_centerHorizontal="true"/>
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="总用时"
                        android:gravity="center"
                        android:layout_below="@+id/countTime1"/>


                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="平均配速"
                        android:id="@+id/textView1"
                        android:gravity="center"
                        android:layout_below="@+id/countPoistion1"
                        android:layout_centerHorizontal="true" />

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="总消耗"
                        android:id="@+id/textView21"
                        android:gravity="center"
                        android:layout_alignTop="@+id/textView1"
                        android:layout_alignParentEnd="true" />

                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>