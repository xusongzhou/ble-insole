<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:orientation="vertical"
			 android:layout_width="match_parent"
			 android:layout_height="wrap_content">

	<FrameLayout
		android:id="@+id/fl_item"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="match_parent">
			<View
				android:layout_marginStart="87.5dp"
				android:background="@color/run_plan_line"
				android:layout_width="3dp"
				android:layout_height="24dp"/>
			<View
				android:id="@+id/divider"
				android:layout_marginStart="87.5dp"
				android:background="@color/run_plan_line"
				android:layout_width="3dp"
				android:layout_height="match_parent"/>
		</LinearLayout>

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="60dp">
			<ImageView
				android:id="@+id/iv_indicate"
				android:layout_marginTop="17dp"
				android:background="@drawable/unfolded"
				android:layout_marginStart="83dp"
				android:layout_width="12dp"
				android:layout_height="12dp"/>
			<TextView
				android:id="@+id/tv_title"
				android:text="标题"
				android:gravity="end"
				android:textSize="18sp"
				android:layout_marginTop="10dp"
				android:textColor="@color/content_text"
				android:layout_width="78dp"
				android:layout_height="wrap_content"/>
			<TextView
				android:id="@+id/tv_content"
				android:layout_toEndOf="@id/iv_indicate"
				android:text="内容"
				android:layout_marginTop="10dp"
				android:layout_marginStart="10dp"
				android:textSize="18sp"
				android:textColor="@color/content_text"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
		</RelativeLayout>
		<View
			android:id="@+id/froeground"
			android:background="@color/run_plan_froeground"
			android:layout_width="match_parent"
			android:layout_height="match_parent" />
	</FrameLayout>

	<LinearLayout
		android:id="@+id/ll_container"
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"/>
</LinearLayout>