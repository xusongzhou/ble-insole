<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:background="@drawable/main_bg"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <com.advanpro.fwtools.common.view.TitleBar
        android:id="@+id/title_bar"        
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/ic_launcher"
        android:layout_marginTop="10dp"/>
    <TextView
        android:text="@string/app_name"
        android:textSize="18sp"
        android:textColor="@color/content_text"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_version"
        android:layout_marginTop="5dp"
        android:text="V 1.0.0 build 555"
        android:textSize="12sp"
        android:textColor="@color/sub_content_text"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.advanpro.fwtools.common.view.ArrowItemView
        android:id="@+id/item_check_new_version"
        android:layout_marginTop="20dp"
        app:itemTitle="@string/check_new_version"
        app:topDividerVisible="true"
        app:style="nothing"
        app:hintVisible="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="更新内容：\n1、修改损伤算法\n2、去除注册时手机号检查，由云端检查\n3、\n4、\n5、\n6、\n7、"
        android:layout_marginTop="5dp"
        android:background="#222"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>