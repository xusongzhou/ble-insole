<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:background="@drawable/main_bg"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <com.advanpro.fwtools.common.view.TitleBar
        android:id="@+id/title_bar"        
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <com.advanpro.fwtools.common.view.ArrowItemView
        android:id="@+id/item_start_ota"
        android:layout_marginTop="20dp"
        app:itemTitle="开始升级"
        app:topDividerVisible="true"
        app:style="nothing"
        app:hintVisible="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_pro_left"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_pro_right"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>