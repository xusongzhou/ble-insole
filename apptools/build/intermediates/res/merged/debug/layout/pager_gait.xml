<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <com.advanpro.fwtools.common.view.TitleBar
        app:title="@string/gait"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    
    <FrameLayout
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/foot_bg"
        android:layout_width="328dp"
        android:layout_height="328dp">
        
        <ImageView
            android:background="@drawable/foot_left"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="50dp"            
            android:layout_width="87dp"
            android:layout_height="239dp" />
        <ImageView
            android:background="@drawable/foot_right"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="187dp"
            android:layout_width="87dp"
            android:layout_height="239dp" />
        <ImageView
            android:id="@+id/l_forefoot"
            android:visibility="invisible"
            android:background="@drawable/l_c_2_3"
            android:layout_marginStart="60dp"
            android:layout_marginTop="68dp"
            android:layout_width="62dp"
            android:layout_height="103dp" />
        <ImageView
            android:id="@+id/l_heel"
            android:visibility="invisible"
            android:layout_marginStart="70dp"
            android:background="@drawable/l_a_2_3"
            android:layout_marginTop="168dp"
            android:layout_width="54dp"
            android:layout_height="106dp" />
        <ImageView
            android:id="@+id/r_forefoot"
            android:visibility="invisible"
            android:layout_marginTop="68dp"
            android:layout_marginStart="200dp"
            android:background="@drawable/r_c_2_3"
            android:layout_width="62dp"
            android:layout_height="103dp" />
        <ImageView
            android:id="@+id/r_heel"
            android:visibility="invisible"
            android:layout_marginTop="168dp"
            android:layout_marginStart="200dp"
            android:background="@drawable/r_a_2_3"
            android:layout_width="54dp"
            android:layout_height="106dp" />

        <ImageView
            android:id="@+id/left_a"
            android:visibility="invisible"
            android:src="@drawable/rank_4"
            android:layout_gravity="bottom"
            android:layout_marginStart="74dp"
            android:layout_marginBottom="46dp"
            android:layout_width="60dp"
            android:layout_height="60dp"/>

        <ImageView
            android:id="@+id/left_b"
            android:visibility="invisible"
            android:src="@drawable/rank_4"
            android:layout_marginStart="80dp"
            android:layout_marginTop="80dp"
            android:layout_width="60dp"
            android:layout_height="60dp"/>

        <ImageView
            android:id="@+id/left_c"
            android:visibility="invisible"
            android:src="@drawable/rank_4"
            android:layout_marginStart="40dp"
            android:layout_marginTop="100dp"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
        <ImageView
            android:id="@+id/left_d"
            android:visibility="invisible"
            android:src="@drawable/rank_4"
            android:layout_marginStart="70dp"
            android:layout_marginTop="30dp"
            android:layout_width="60dp"
            android:layout_height="60dp"/>

        <ImageView
            android:id="@+id/right_a"
            android:visibility="invisible"
            android:src="@drawable/rank_4"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="74dp"
            android:layout_marginBottom="46dp"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
        <ImageView
            android:id="@+id/right_b"
            android:visibility="invisible"
            android:src="@drawable/rank_4"
            android:layout_gravity="end"
            android:layout_marginEnd="80dp"
            android:layout_marginTop="80dp"
            android:layout_width="60dp"
            android:layout_height="60dp"/>

        <ImageView
            android:id="@+id/right_c"
            android:visibility="invisible"
            android:src="@drawable/rank_4"
            android:layout_gravity="end"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="100dp"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
        <ImageView
            android:id="@+id/right_d"
            android:visibility="invisible"
            android:src="@drawable/rank_4"
            android:layout_gravity="end"
            android:layout_marginEnd="70dp"
            android:layout_marginTop="30dp"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
    </FrameLayout>
    
    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="280dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_left_state"
            android:visibility="invisible"
            android:text="内翻"
            android:textSize="16sp"
            android:textColor="@color/content_text"
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_right_state"
            android:visibility="invisible"
            android:text="外翻"
            android:textSize="16sp"
            android:textColor="@color/content_text"
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    
    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_color_bar"
            android:background="@drawable/color_bar"
            android:layout_centerHorizontal="true"
            android:layout_width="284dp"
            android:layout_height="18dp" />
        <TextView
            android:text="@string/weak"
            android:layout_toStartOf="@id/iv_color_bar"
            android:layout_marginEnd="10dp"
            android:textColor="@color/content_text"
            android:layout_centerHorizontal="true"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="@string/strong"
            android:textColor="@color/content_text"
            android:layout_toEndOf="@id/iv_color_bar"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/layout_rank"
            android:layout_centerHorizontal="true"
            android:layout_width="284dp"
            android:layout_height="wrap_content">
            <TextView
                android:text="1"
                android:textSize="14sp"
                android:textColor="@color/content_text"
                android:gravity="center_horizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <TextView
                android:text="2"
                android:textSize="14sp"
                android:textColor="@color/content_text"
                android:gravity="center_horizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <TextView
                android:text="3"
                android:textSize="14sp"
                android:textColor="@color/content_text"
                android:gravity="center_horizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <TextView
                android:text="4"
                android:textSize="14sp"
                android:textColor="@color/content_text"
                android:gravity="center_horizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <TextView
                android:text="5"
                android:textSize="14sp"
                android:textColor="@color/content_text"
                android:gravity="center_horizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <TextView
                android:text="6"
                android:textSize="14sp"
                android:textColor="@color/content_text"
                android:gravity="center_horizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <TextView
                android:text="7"
                android:textSize="14sp"
                android:textColor="@color/content_text"
                android:gravity="center_horizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <TextView
                android:text="8"
                android:textSize="14sp"
                android:textColor="@color/content_text"
                android:gravity="center_horizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:text="@string/rank"
            android:layout_toStartOf="@id/layout_rank"
            android:textSize="12sp"
            android:textColor="@color/content_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>