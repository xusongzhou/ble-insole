<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/main_bg"
              android:orientation="vertical">

    <com.advanpro.fwtools.common.view.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:overScrollMode="never"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.advanpro.fwtools.common.view.RoundImageView
                android:id="@+id/iv_head"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/head"/>

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="100dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/account_colon"
                    android:textColor="@color/content_text"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tv_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/content_text"
                    android:textSize="16sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="100dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/username_colon"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/content_text"
                    android:textSize="16sp"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_username"
                        android:layout_marginStart="14dp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textColor="@color/content_text"
                        android:layout_gravity="center_vertical"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <com.advanpro.fwtools.common.view.ClearEditText
                        android:id="@+id/et_username"
                        android:visibility="invisible"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="4dp"
                        android:singleLine="true"
                        android:paddingEnd="5dp"
                        android:paddingStart="10dp"
                        android:hint="@string/input_username"
                        android:background="@drawable/edittext_bg"
                        android:textColor="@color/content_text"
                        android:textSize="16sp"/>
                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1"
                    android:background="@color/divider"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/personal_info"
                    android:textColor="@color/content_text"
                    android:textSize="14sp"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1"
                    android:background="@color/divider"/>
            </LinearLayout>

            <TableLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp">
                    <FrameLayout
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_width="0dp">
                        <TextView
                            android:id="@+id/tv_gender"
                            android:textColor="@color/content_text"
                            android:textSize="18sp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <com.advanpro.fwtools.common.view.RoundProgressBar
                            android:id="@+id/ring_gender"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="70dp"
                            android:layout_height="70dp"/>
                    </FrameLayout>
                    <FrameLayout
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_width="0dp">
                        <TextView
                            android:id="@+id/tv_birthyear"
                            android:textColor="@color/content_text"
                            android:textSize="18sp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <com.advanpro.fwtools.common.view.RoundProgressBar
                            android:id="@+id/ring_birthyear"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="70dp"
                            android:layout_height="70dp"/>
                    </FrameLayout>
                </TableRow>
                <TableRow
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp">
                    <TextView
                        android:text="@string/gender"
                        android:textColor="@color/content_text"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="@string/birthyear"
                        android:textColor="@color/content_text"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>
                </TableRow>
                <TableRow
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp">
                    <FrameLayout
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_width="0dp">
                        <TextView
                            android:id="@+id/tv_height"
                            android:textColor="@color/content_text"
                            android:textSize="18sp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <com.advanpro.fwtools.common.view.RoundProgressBar
                            android:id="@+id/ring_height"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="70dp"
                            android:layout_height="70dp"/>
                    </FrameLayout>
                    <FrameLayout
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_width="0dp">
                        <TextView
                            android:id="@+id/tv_weight"
                            android:textColor="@color/content_text"
                            android:textSize="18sp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <com.advanpro.fwtools.common.view.RoundProgressBar
                            android:id="@+id/ring_weight"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="70dp"
                            android:layout_height="70dp"/>
                    </FrameLayout>
                </TableRow>
                <TableRow
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp">
                    <TextView
                        android:text="@string/height_brackets"
                        android:textColor="@color/content_text"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="@string/weight_brackets"
                        android:textColor="@color/content_text"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>
                </TableRow>
            </TableLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btn_change_info"
                    android:text="@string/change_info"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:textColor="#fff"
                    android:background="@drawable/red_btn"
                    android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/btn_change_pwd"
                    android:text="@string/change_pwd"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:textColor="#fff"
                    android:background="@drawable/blue_btn"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>