<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:overScrollMode="never">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/title_bar_bg">

            <TextView
                android:id="@+id/tv_plan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:drawablePadding="3dp"
                android:gravity="center_vertical"
                android:text="@string/plan"
                android:textColor="@drawable/title_bar_text_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/today_activity"
                android:textColor="@color/title_bar_text"
                android:textSize="18sp" />
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/fl_today_activity"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="176dp"
                    android:orientation="vertical">
                    <!--==============步行==============-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text="@string/walk"
                        android:textColor="@color/content_text"
                        android:textSize="24sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/content_item_bg"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal">

                            <TextView
                                android:id="@+id/tv_walk_steps"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text="0"
                                android:textColor="@color/content_text"
                                android:textSize="26sp" />

                            <Space
                                android:layout_width="10dp"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/unit_step"
                                android:textColor="@color/content_text" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginStart="10dp"
                            android:background="@color/divider" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="3dp"
                            android:paddingEnd="10dp"
                            android:paddingStart="10dp">

                            <TextView
                                android:id="@+id/tv_walk_duration"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:ellipsize="end"
                                android:gravity="center_horizontal"
                                android:singleLine="true"
                                android:text="00:00:00"
                                android:textColor="@color/content_text" />

                            <View
                                android:layout_width="0.5dp"
                                android:layout_height="10dp"
                                android:layout_gravity="center_vertical"
                                android:background="@color/divider" />

                            <TextView
                                android:id="@+id/tv_walk_distance"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:ellipsize="end"
                                android:gravity="center_horizontal"
                                android:singleLine="true"
                                android:text="0 公里"
                                android:textColor="@color/content_text" />

                            <View
                                android:layout_width="0.5dp"
                                android:layout_height="10dp"
                                android:layout_gravity="center_vertical"
                                android:background="@color/divider" />

                            <TextView
                                android:id="@+id/tv_walk_cal"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:ellipsize="end"
                                android:gravity="center_horizontal"
                                android:singleLine="true"
                                android:text="0 千卡"
                                android:textColor="@color/content_text" />
                        </LinearLayout>
                    </LinearLayout>
                    <!--==============跑量==============-->
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text="@string/run_volume"
                        android:textColor="@color/content_text"
                        android:textSize="24sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/content_item_bg"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_horizontal">

                                <TextView
                                    android:id="@+id/tv_run_distance"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:singleLine="true"
                                    android:text="0"
                                    android:textColor="@color/content_text"
                                    android:textSize="26sp" />

                                <Space
                                    android:layout_width="10dp"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/km"
                                    android:textColor="@color/content_text" />
                            </LinearLayout>

                            <View
                                android:layout_width="0.5dp"
                                android:layout_height="18dp"
                                android:layout_gravity="center_vertical"
                                android:background="@color/divider" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_horizontal">

                                <TextView
                                    android:id="@+id/tv_run_steps"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:singleLine="true"
                                    android:text="0"
                                    android:textColor="@color/content_text"
                                    android:textSize="26sp" />

                                <Space
                                    android:layout_width="10dp"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/unit_step"
                                    android:textColor="@color/content_text" />
                            </LinearLayout>
                        </LinearLayout>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginStart="10dp"
                            android:background="@color/divider" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="3dp"
                            android:paddingEnd="10dp"
                            android:paddingStart="10dp">

                            <TextView
                                android:id="@+id/tv_run_duration"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:ellipsize="end"
                                android:gravity="center_horizontal"
                                android:singleLine="true"
                                android:text="00:00:00"
                                android:textColor="@color/content_text" />

                            <View
                                android:layout_width="0.5dp"
                                android:layout_height="10dp"
                                android:layout_gravity="center_vertical"
                                android:background="@color/divider" />

                            <TextView
                                android:id="@+id/tv_run_pace"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:ellipsize="end"
                                android:gravity="center_horizontal"
                                android:singleLine="true"
                                android:text="0 分钟/公里"
                                android:textColor="@color/content_text" />

                            <View
                                android:layout_width="0.5dp"
                                android:layout_height="10dp"
                                android:layout_gravity="center_vertical"
                                android:background="@color/divider" />

                            <TextView
                                android:id="@+id/tv_run_cal"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:ellipsize="end"
                                android:gravity="center_horizontal"
                                android:singleLine="true"
                                android:text="0 千卡"
                                android:textColor="@color/content_text" />
                        </LinearLayout>
                    </LinearLayout>
                    <!--计划提示及开始跑步按钮-->
                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_plan_process"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="10公里跑步训练第2周第3天"
                            android:textColor="@color/sub_content_text" />

                        <ImageButton
                            android:id="@+id/btn_start_run"
                            android:layout_marginTop="10dp"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/start_run" />
                    </LinearLayout>
                </LinearLayout>
                <!--==============圆================-->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginTop="14dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ring" />

                    <LinearLayout
                        android:id="@+id/layout_total"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/accumulation"
                            android:textColor="@color/content_text"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/tv_total"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="0"
                            android:textColor="@color/content_text"
                            android:textSize="40sp" />

                        <TextView
                            android:id="@+id/tv_unit"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/km"
                            android:textColor="@color/content_text"
                            android:textSize="20sp" />
                    </LinearLayout>
                </FrameLayout>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/fl_tips"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:background="@color/top_tips_bg"
                android:visibility="invisible">

                <TextView
                    android:id="@+id/tv_warn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="还需2236步/3.2公里，即可换取10000积分。继续加油！"
                    android:textColor="@color/content_text"
                    android:textSize="11sp" />

                <ImageView
                    android:id="@+id/iv_close"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end|center_vertical"
                    android:paddingBottom="2dp"
                    android:paddingEnd="16dp"
                    android:paddingStart="10dp"
                    android:paddingTop="2dp"
                    android:src="@drawable/close" />
            </FrameLayout>

            <RelativeLayout
                android:id="@+id/rl_warning"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/top_warning_bg"
                android:visibility="invisible">

                <ImageView
                    android:id="@+id/iv_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/warning" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@id/iv_icon"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/unbound_warning"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/next_normal" />
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_conn_warn"
                android:visibility="invisible"
                android:padding="4dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textColor="#fff"
                android:background="@color/top_warning_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            
        </FrameLayout>
    </LinearLayout>
</ScrollView>