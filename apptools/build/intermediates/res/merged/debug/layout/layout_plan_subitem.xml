<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
			 android:layout_width="match_parent"
			 android:layout_height="match_parent">

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<View
			android:layout_marginStart="87.5dp"
			android:background="@color/run_plan_line"
			android:layout_width="3dp"
			android:layout_height="20dp"/>

		<View
			android:id="@+id/divider"
			android:layout_marginStart="87.5dp"
			android:background="@color/run_plan_line"
			android:layout_width="3dp"
			android:layout_height="match_parent"/>
	</LinearLayout>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<ImageView
			android:id="@+id/iv_indicate"
			android:background="@drawable/sign"
			android:layout_marginTop="10dp"
			android:layout_marginStart="80dp"
			android:layout_width="18dp"
			android:layout_height="18dp"/>

		<ImageView
			android:id="@+id/iv_chk"
			android:layout_alignParentEnd="true"
			android:src="@drawable/uncheck"
			android:paddingBottom="6dp"
			android:paddingTop="2dp"
			android:paddingStart="10dp"
			android:paddingEnd="6dp"
			android:layout_width="40dp"
			android:layout_height="40dp"/>

		<TextView
			android:id="@+id/tv_title"
			android:text="标题"
			android:gravity="end"
			android:layout_marginTop="10dp"
			android:textSize="14sp"
			android:textColor="@color/content_text"
			android:layout_width="78dp"
			android:layout_height="wrap_content"/>

		<TextView
			android:id="@+id/tv_content"
			android:layout_toEndOf="@id/iv_indicate"
			android:layout_toStartOf="@id/iv_chk"
			android:text="内容"
			android:layout_marginTop="10dp"
			android:layout_marginStart="10dp"
			android:textSize="14sp"
			android:textColor="@color/content_text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>
	</RelativeLayout>

	<View
		android:id="@+id/froeground"
		android:background="@color/run_plan_froeground"
		android:layout_width="match_parent"
		android:layout_height="match_parent"/>
</FrameLayout>